set visualbell

set number
set relativenumber
syntax on

set cursorline
set cursorcolumn

set tabstop=4

set ignorecase

set history=1000

set wildmenu

set wildmode=list:longest

set wildignore=*.docx,*.jpg,*png,*gig,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

set statusline=

set statusline+=\ %F\ %M\ %Y\ %R

set statusline+=%=

set statusline+=\ ascii:\ %b\ hex:\ 0x%B\ row:\ %l\ col:\ %c\ percent:\ %p%%

set laststatus=2
